<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/load_name"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="TOURNAMENT NAME"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/updated_date"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="03-04-18 @16:52"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/load_button"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#48c72b"
                    android:text="LOAD"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/update_button"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#e8e352"
                    android:text="UPDATE"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delete_button"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#ff262d"
                    android:text="DELETE"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/host_load"
                    android:background="@drawable/cloud"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/status_percent_tournament"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:text="100%"
            android:textColor="#fff"
            android:textSize="@dimen/_23ssp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#9E9E9E" />


</LinearLayout>