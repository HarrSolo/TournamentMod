<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:orientation="vertical"
    tools:context="com.project.harrison.tournamentmod.MainActivity">

    <TextView
        android:id="@+id/user_name_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5ssp"
        android:padding="@dimen/_2sdp"
        android:textColor="#000"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:background="@drawable/logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="#9E9E9E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center">

        <Button
            android:id="@+id/new_tour"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:background="@drawable/new_tab"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="NEW"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/offline"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="LOAD OFFLINE"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center">

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:background="@drawable/online"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="LOAD ONLINE"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/view"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="VIEW"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center">

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:background="@drawable/history"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="HISTORY"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/mail"
            android:onClick="action"
            android:paddingTop="@dimen/_40sdp"
            android:text="REVIEW"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>
